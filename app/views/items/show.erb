<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title><%= item.title %></title>
    <link href="https://fonts.googleapis.com/css?family=Raleway" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="/reset.css">
    <link rel="stylesheet" type="text/css" href="/main.css">
  </head>
  <body>
    <header>
      <h1><a href="/">Little Shop</a></h1>
      <nav>
        <ul>
          <li><a href="/merchants">Merchants</a></li>
          <li><a href="/items">Items</a></li>
          <li><a href="/invoices">Invoices</a></li>
        </ul>
      </nav>
    </header>
    <section>
      <div class="show-item"><%= item.title %></div>
      <div class="show-item">
        <a class="edit-button" href="/items/<%= item.id %>/edit">Edit</a>
        <form method="post" action="/items/<%= item.id %>">
          <input type='hidden' name='_method' value='delete'>
          <button class='delete-button' type='submit' value='delete'>Delete</button>
        </form>
      </div>
    </section>
    <a href="/merchants/<%= item.merchant_id %>"><%= item.merchant.name %></a>
    <div class="">
      <img src="" alt="<%= item.title %> photo">
    </div>
    <div id="item-info">
      <h4><%= item.title %></h4>
      <p>$<%= item.price %></p>
      <p><%= item.description %></p>
    </div>
  </body>
</html>
