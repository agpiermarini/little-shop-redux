<!DOCTYPE html>
<html>
  <head>
    <%= erb(:'partials/static_links') %>
    <title>Items</title>
  </head>

  <body>
    <%= erb(:'partials/header') %>

    <section class="header-section">
      <a href="/items-dashboard">Items Dashboard</a>
      <ul>
        <li><h1>Items</h1></li>
        <li><a  href="/items/new">Create a New Item</a></il>
      </ul>
    </section>

    <div class="cards">
      <ul>
        <% all_items.each do |item| %>
          <li class="card item" >
            <img src="<%= item.image %>" alt="item photo">
            <a href="/items/<%= item.id %>"><%= item.title %></a>
            <h1><%= item.price %></h1>
          </li>
        <% end %>
      </ul>
    </div>

  </body>
</html>
