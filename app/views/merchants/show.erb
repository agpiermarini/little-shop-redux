<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Create New Merchant</title>
  </head>
  <body>
    <%= erb :'partials/nav' %>
    <header>
      <h1><%= merchant.name %></h1>
        <a class="edit-button" href="/merchants/<%= merchant.id %>/edit">Edit</button>
      <form method='post' action='/merchants/<%= merchant.id %>'>
        <input type='hidden' name='_method' value='delete'>
        <button class='delete_merchant' type='submit' value='delete'>Delete</button>
      </form>
    </header>
  </body>
</html>
