<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Create New Merchant</title>
  </head>
  <body>
    <%= erb :'partials/nav' %>
    <header>
      <h1>Create New Merchant</h1>
    </header>

    <section class="form-box">
      <form class="new-merchant" action="/merchants" method="post">
        <p class="input-label">Name</p>
        <input id="Name" type="text" name="merchant[name]">
        <input class="add-merchant" type="submit" value="Create Merchant">
      </form>
        <a class="cancel-button" href="/merchants">Cancel</a>
    </section>
  </body>

</html>
