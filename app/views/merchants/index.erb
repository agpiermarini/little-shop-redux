<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="/main.css">
    <title>Merchants</title>
  </head>
  <body>
    <nav>
      <a class="little_shop" href="/">LittleShop</a>
      <a class="right_links" href="/merchants">Merchants</a>
      <a class="right_links" href="/items">Items</a>
      <a class="right_links" href="/invoices">Invoices</a>
    </nav>
    <header>
      <a href="/merchant/dashboard">dashboard</a>
      <h1>Merchants</h1>
        <form method="get" action="/merchants/new">
          <button type="submit">Create a New Merchant</button>
        </form>
    </header>


  <table>
    <% all_merchants.each do |merchant| %>
      <!-- <tbody> -->
        <tr>
          <td>
            <a href="/merchants/<%= merchant.id %>"><%= merchant.name %></a>
            <form method="get" action="/merchants/<%= merchant.id %>/edit">
              <button class="edit_merchant" type="submit">Edit</button>
            </form>
            <form method="post" action="/merchants/<%= merchant.id %>">
              <input type="hidden" name="_method" value="delete">
              <button class="delete_merchant" type="submit" value="delete">Delete</button>
            </form>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>



  </body>
</html>
